            if (addPodContainer)
            {
                @:<div class="item @itemsPerRow col-xs-12">
            }
            @Html.Partial("USNSiteWidePods/USN_SWP_VideoPod", (Usn_Swp_VideoPod)Model)
            if (addPodContainer)
            {
                @:</div>
            }
            break;
        case Usn_Swp_CodePod.ModelTypeAlias:
            if (addPodContainer)
            {
                @:<div class="item @itemsPerRow col-xs-12">
            }
            @Html.Partial("USNSiteWidePods/USN_SWP_CodePod", (Usn_Swp_CodePod)Model)
            if (addPodContainer)
            {
                @:</div>
            }
            break;
        case Usn_Swp_ListingPod.ModelTypeAlias:
            if (addPodContainer)
