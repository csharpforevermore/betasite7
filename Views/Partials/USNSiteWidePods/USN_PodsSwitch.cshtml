            if (addPodContainer)
            {
                @:</div>
            }
            break;
        case Usn_Swp_RelatedContentPod.ModelTypeAlias:
            if (addPodContainer)
            {
                @:<div class="item @itemsPerRow col-xs-12">
            }
            @Html.Partial("USNSiteWidePods/USN_SWP_RelatedContentPod", (Usn_Swp_RelatedContentPod)Model)
            if (addPodContainer)
            {
                @:</div>
            }
            break;
    }
}

