@model Umbraco.Forms.Mvc.Models.FieldViewModel
@using Umbraco.Forms.Mvc

<div class="@Html.GetFormFieldClass(Model.FieldTypeName) radio radiobuttonlist dataconsent" id="@Model.Id">
    <label for="@string.Concat(Model.Id, "_Accept")">
        <input type="radio" name="@Model.Id" id="@string.Concat(Model.Id, "_Accept")" value="accepted"
               @if (Model.Mandatory) { <text> data-val="true" data-val-requiredlist="@Model.RequiredErrorMessage" </text>  }
               @if (Model.ContainsValue("accepted")) { <text> checked="checked" </text>  } />
        @Model.AdditionalSettings["AcceptCopy"]
    </label>
    <label for="@string.Concat(Model.Id, "_Decline")">
    <input type="radio" name="@Model.Id" id="@string.Concat(Model.Id, "_Decline")" value="declined"
           @if (Model.Mandatory) { <text> data-val="true" data-val-requiredlist="@Model.RequiredErrorMessage" </text>  }
           @if (Model.ContainsValue("declined")) { <text> checked="checked" </text>  } />
   @Model.AdditionalSettings["DeclineCopy"]</label>
</div>